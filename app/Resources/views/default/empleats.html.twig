{% extends 'base.html.twig' %}
{% block main %}
  <div class="w3-row w3-padding-64">
    <div class="w3-twothird w3-container">
      <h1 class="w3-text-teal">EMPLEATS</h1>
      
      <ul id="card" class="w3-ul w3-card-4">
      {% block showEmpleat %}
        {% for user in empleats %}
          <li class="w3-padding-16">
            <a href="{{ path('empleat_show', {'id': user.EMPL_ID}) }}"><img src="{{ asset('images/empleats/img_avatar'~random(5)~'.png')}}" class="w3-left w3-circle w3-margin-right" style="width:50px">
            <span class="w3-large">{{ user.EMPL_FORNAME }}</span></a><br>
            <span>{{ user.EMPL_SURNAME }}</span>    {{  render(controller("AppBundle:Default:sidebar", { 'id': user.EMPL_ID} )) }}
          </li>
        {% endfor %}
      {% endblock %}
      </ul>
      
    </div>
    <div class="w3-third w3-container">
      <p class="w3-border w3-padding-large w3-padding-32 w3-center">AD</p>
      <p class="w3-border w3-padding-large w3-padding-64 w3-center">AD</p>
    </div>
  </div>
{% endblock %}